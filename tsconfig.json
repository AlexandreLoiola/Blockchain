{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./build",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,  
    "resolveJsonModule": true
  },
  "exclude": ["**/*.test.ts", "**/*.spec.ts", "**/*.d.ts"]
}
